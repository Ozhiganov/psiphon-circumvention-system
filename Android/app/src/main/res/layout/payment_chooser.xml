<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/PaymentChooserFragment.OverallDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_margin="10dp" />

        <TextView
            android:text="@string/PaymentChooserFragment.SubscriptionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_margin="10dp" />

        <Button
            android:text="@string/PaymentChooserFragment.Subscription"
            android:id="@+id/subscription"
            android:onClick="onSubscriptionButtonClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:text="@string/PaymentChooserFragment.TimePassDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_margin="10dp" />

        <!-- Time pass button IDs must be of the form "timepass"+lifetime_in_days -->
        <Button
            android:text="@string/PaymentChooserFragment.TimePass7Day"
            android:id="@+id/timepass7"
            android:onClick="onTimePassButtonClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:nestedScrollingEnabled="false" />

        <Button
            android:text="@string/PaymentChooserFragment.TimePass30Day"
            android:id="@+id/timepass30"
            android:onClick="onTimePassButtonClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:nestedScrollingEnabled="false" />

        <Button
            android:text="@string/PaymentChooserFragment.TimePass90Day"
            android:id="@+id/timepass90"
            android:onClick="onTimePassButtonClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>

</ScrollView>
